
<%- include ./partials/header.ejs%>
<style>
    *{
        margin: 0%;
        padding: 0%;
        box-sizing: border-box;
    }

    html, body{
        height: 100%;
        width: 100%;
    }

    #main{
      
       padding-top: 80px;
        min-height: 100vh;
        width: 100%;
        background-color: rgb(83, 83, 170);

    }

    #container2{
        
        min-height: 80vh;
        width: 100%;
        background-color: rgb(83, 83, 170);
    }
  
    
    button{
        border-radius: 10px;
        background-color: brown;
        color: white;
        height: 40px;
        width: 100px;
    }

    button a{
        color: white;
        text-decoration: none;
    }

    #myCard{
        margin-left: 5%;
        width:30% ;
    }
    #formBox{
        margin-left: 5%;
    }

    #PostBox{
        /* margin-left: 5%; */
        width: 50%;
    }

    #ifPart{
        margin-left: 30px;
    }

</style>



    <div id="main">
        
        

        <div id="container2">

        
            <div id="formBox">
                <div class="card" id="PostBox">
                    <div class="card-header">
                      <%=foundPost.postingUser%>
                    </div>
                    <div class="card-body">
                      
                      <p class="card-text"><%=foundPost.content%></p>
                      <p></p>
                      <a href="/likes/<%=foundPost._id%>" class="btn btn-primary"><%=foundPost.likes.length%> Likes</a>
                      <a href="/comment/<%=foundPost._id%>" class="btn btn-warning"> <%=foundPost.comments.length%> Comment</a>
                    </div>
                  </div>


                  <div class="card my-3" id="myCard">
                    <div class="card-body">
                      user |  <%=foundPost.comments[commentIndex].user.username%>
                      <br>
                      <br>
                      <%=foundPost.comments[commentIndex].comment%>
                      <br>
                      <br>
                        <a href="/likes/<%=foundPost._id%>/<%=commentIndex%>" class="btn btn-primary"><%=foundPost.comments[commentIndex].likes.length%> Likes</a>
                        <a href="/reply/<%=foundPost._id%>/<%=commentIndex%>" class="btn btn-primary">Reply</a>

                    
                   
                    </div>
                  </div>

                <h1>Add a comment:</h1>
            
                <form action="/comment/<%=foundPost._id%>" method="post"> 
                   
                    <input type="text" name="comment" placeholder="Your Comment">
                    <input type="submit">
                </form>
        
            </div>
            <%foundPost.comments[commentIndex].replies.forEach(function(reply, index){%>
                
                <div class="card my-3" id="myCard">
                    <div class="card-body">
                      user |  <%=reply.Ruser.username%>
                      <br>
                      <br>
                      <%=reply.reply%>
                      <br>
                      <br>
                    
                    

                    
                   
                    </div>
                  </div>
          
            <%})%>
          
        </div>
        

        </div>

<%- include ./partials/footer.ejs%>
